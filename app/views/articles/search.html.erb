<div class="text-center">
  <h3 class="mb-4"> Searching <em><%= @search %></em>
</h3>
</div>
<div class="columns">
  <div class="one-half column centered">
    <% if @articles.empty? %>
      <div class="card card-body">
        <h2 class="text-center">
          No articles found with your search criteria
        </h2>
      </div>
    <% else %>
      <% @articles.each do |article| %>
      <div class="card mb-2">
        <div class="card-body">
          <h4 class="">
            <%= link_to(article.title, article_url(article) ) %>
          </h4>
          <p class="mb-2">
            <%= article.abstract %>
          </p>
          <p class="small mb-0">
            Published <%= local_time(article.published_date) %> <%= article.author %>
          </p>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
